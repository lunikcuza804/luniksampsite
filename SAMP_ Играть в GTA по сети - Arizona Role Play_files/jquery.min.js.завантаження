$(document).on('click', 'button.footer__up', function () {jQuery('html').animate({scrollTop:0},500);});$('.navbar__opener').click(function () {$('.mobile__navi').css('display', 'flex');});$('.vm--overlay').click(function () {$('.mobile__navi').css('display', 'none');});$('.vm--container').css('width', $(window).width()+'px');$('.vm--container').css('height', $(window).height()+'px');$('.navbar__opener').click(function () {$('.mobile__navi').css('display', 'flex');});$('.vm--overlay').click(function () {$('.mobile__navi').css('display', 'none');});